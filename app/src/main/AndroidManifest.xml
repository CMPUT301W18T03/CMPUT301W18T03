<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.c301t3.c301t3app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MyTasksActivity"
            android:parentActivityName=".MainActivity">
            <!-- NOTE: android:parentActivityName is to set the
             Activity of where the "back button" will go to, make
             sure that this is edited to got to its previous page
             if the story board changes! -->
        </activity>
        <!-- Here is how we are going to add a parent via the XML portion. Gonna use the like this
         Also need to change Main Activity to view 2 name.-->
        <activity
            android:name=".selected_task_activity"
            android:label="selected_task_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.c301t3.c301t3app.MainActivity" />
        </activity>

    </application>

</manifest>